<link rel="stylesheet" type="text/css" href="css/style.css" />

<div class="container">

<div class="top">
    <h2 class="header">
    Click any book to view the details.
    </h2>
</div>

<div class=bookSection>
        
        <% let x = 0 %>
        <% books.forEach (books => { %>
            <% x++ %>
            <br />
            <div class=books>
            <br />
            <br />
            <a href="books/<%=x%>" >  <%= books.bookTitle %> 
            <br />
            <br />
            <br />
            </div>
            <br />
            <%});%>
</div>

</div>